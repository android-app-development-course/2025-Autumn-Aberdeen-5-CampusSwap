<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context="page.page1.kind_page3">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电子产品"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"/>

        <View
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/kind_list1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="8dp"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/button_1"
            android:text="首页"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_compass"
            android:drawablePadding="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/button_msg"
            android:text="消息"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/nav_unselected"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_dialog_email"
            android:drawablePadding="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <RadioButton
            android:id="@+id/button_3"
            android:text="我的"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/nav_unselected"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <RadioButton
            android:id="@+id/button_more"
            android:text="更多"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/nav_unselected"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_more"
            android:drawablePadding="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </RadioGroup>
</LinearLayout>
