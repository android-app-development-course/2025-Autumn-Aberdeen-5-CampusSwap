<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#1E90FF"
        android:paddingHorizontal="12dp">

        <Button
            android:id="@+id/but1_m1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:text="返回"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_centerInParent="true"
            android:text="发布闲置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/but2_m1"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:text="我的发布"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="商品图片 *"
                android:textColor="#374151"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:background="#F3F4F6">
                <ImageButton
                    android:id="@+id/m1_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_camera" />
            </FrameLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:text="标题 *"
                android:textColor="#374151"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/m1_title"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_field"
                android:hint="简短描述你的闲置物品"
                android:paddingHorizontal="12dp"
                android:maxLength="50"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="20dp"
                android:text="价格 *"
                android:textColor="#374151"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_field"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">
                <TextView android:text="¥" android:textSize="18sp" android:textColor="#111827" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/m1_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:paddingStart="8dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:text="分类 *"
                android:textColor="#374151"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/m1_style"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_field" />

            <TextView
                android:layout_marginTop="20dp"
                android:text="联系方式"
                android:textColor="#374151"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/m1_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_field"
                android:hint="手机号或微信号"
                android:paddingHorizontal="12dp"
                android:inputType="text"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="20dp"
                android:text="详细描述"
                android:textColor="#374151"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/m1_nr"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_field"
                android:gravity="top"
                android:hint="描述商品的成色、购买时间等"
                android:padding="12dp"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#EFF6FF"
                android:padding="12dp"
                android:orientation="vertical">
                <TextView
                    android:text="交易安全提示："
                    android:textStyle="bold"
                    android:textColor="#1E40AF"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="• 仅限校内面交 • 验货后再付款"
                    android:textColor="#1E40AF"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF">
        <Button
            android:id="@+id/fabu"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/bg_primary_button"
            android:text="发布"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>