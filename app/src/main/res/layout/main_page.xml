<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray">

    <!-- 顶部功能栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="校园圈"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawablePadding="4dp"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_search"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_popup_reminder"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- 分类标签栏 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tab_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/kind1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tab_sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体育用品"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/tab_bg_unselected"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/kind2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tab_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活用品"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/tab_bg_unselected"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/kind3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tab_digital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子产品"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/tab_bg_unselected"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/kind4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tab_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学习用品"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/tab_bg_unselected"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- 商品列表 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="8dp"
            android:padding="8dp"
            android:clipToPadding="false"/>

        <!-- 发布闲置浮动按钮 -->
        <ImageView
            android:id="@+id/fab_add"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@color/colorPrimary"
            android:src="@android:drawable/ic_input_add"
            android:elevation="6dp"/>
    </FrameLayout>

    <!-- 底部导航栏 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white">

        <!-- 首页 -->
        <RadioButton
            android:id="@+id/button_1"
            android:text="首页"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_compass"
            android:drawablePadding="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:checked="true"/>

        <!-- 消息 -->
        <RadioButton
            android:id="@+id/button_msg"
            android:text="消息"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/nav_unselected"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_dialog_email"
            android:drawablePadding="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <!-- 我的 -->
        <RadioButton
            android:id="@+id/button_3"
            android:text="我的"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/nav_unselected"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <!-- 更多 -->
        <RadioButton
            android:id="@+id/button_more"
            android:text="更多"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/nav_unselected"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_more"
            android:drawablePadding="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </RadioGroup>
</LinearLayout>
